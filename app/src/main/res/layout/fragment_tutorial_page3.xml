<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tutorial_card_background"
    tools:context=".TutorialPage1Fragment">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/overview_page_3_paragraph"
        android:padding="16dp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/offWhiteTitle"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/overview_card_3_paragraph" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/overview_get_started_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/overview_get_started_button"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/open_sans_semibold"
        android:textAllCaps="false"
        android:background="@drawable/overview_get_started_button_border"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        app:layout_goneMarginLeft="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>